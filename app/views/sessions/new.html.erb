<p id="notice"><%= notice %></p>

<center><%= form_for :session, url: sign_in_path do |f| %>

    <div class="field">
      <%= f.label :login %><br />
      <%= f.text_field :login, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>
    <div class="actions">
      <%= f.submit "Log in" %>
    </div>
    <p>New user? <%= link_to "Sign up now!", registerUser_path %></p>
<% end %>
</center>