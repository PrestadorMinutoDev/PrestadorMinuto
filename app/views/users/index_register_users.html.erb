<p id="notice"><%= notice %></p>

<h1>Listing Users Register Users</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Doc</th>
      <th>Birthdate</th>
      <th>Email</th>
      <th>Last logon</th>
      <th>Certdate</th>
      <th>Phone Number</th>
      <th>Country</th>
      <th>State</th>
      <th>Tipo de conta:</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.doc %></td>
        <td><%= user.birthdate %></td>
        <td><%= user.email %></td>
        <td><%= user.last_logon %></td>
        <td><%= user.certdate %></td>
        <% if user.phones.length == 0 %>
            <td>Not found! </td>
        <% else %>
            <% user.phones.each do |phone| %>
                <td><%= phone.number %></td>
                <% break %>
            <% end %>

        <% end %>
        <td><%= user.address.country.name %></td>
        <td><%= user.address.state.name %></td>
        <td><%= user.account.account_kind.name %></td>
        <td><%= link_to 'Show', user %></td>
        <!-- ##edit_user_path(user) !-->
        <td><%= link_to 'Edit', edit_register_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

