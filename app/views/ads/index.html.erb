<p id="notice"><%= notice %></p>

<h1>Listing Ads</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Rating avg</th>
      <th>Adscol</th>
      <th>Profession id</th>
      <th>Profession id 1</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ads.each do |ad| %>
      <tr>
        <td><%= ad.description %></td>
        <td><%= ad.rating_avg %></td>
        <td><%= ad.adscol %></td>
        <td><%= ad.profession_id %></td>
        <td><%= ad.profession_id_1 %></td>
        <td><%= link_to 'Show', ad %></td>
        <td><%= link_to 'Edit', edit_ad_path(ad) %></td>
        <td><%= link_to 'Destroy', ad, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

